<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


	<bean id="emailProperties"
		class="com.gemma.web.beans.EmailProperties">
		<property name="transportProtocol" value="smtp"></property>
		<property name="smtpAuth" value="true"></property>
		<property name="smtpHost" value="smtp.live.com"></property>
		<property name="smtpPort" value="587"></property>
		<property name="smtpStarttlsEnable" value="true"></property>
		<property name="pop3Host" value="pop3.live.com"></property>
		<property name="pop3Port" value="995"></property>
		<property name="pop3StarttlsEnable" value="true"></property>
	</bean>
</beans>
